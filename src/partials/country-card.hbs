<div class="country-card">
    <ul class="country-card-list">
        <li class="country-name">{{name}}</li>
        <li class="country-card-item">Capital: {{capital}}</li>
        <li class="country-card-item">Population: {{population}}</li>
        <li class="country-card-item">
            <ul class="language-list"> Languages:
                {{#each languages}}
                <li>{{this.name}}</li>
                {{/each}}
            </ul>
        </li>
    </ul>
    <div class="flag">
        <img src="{{flag}}" alt="Flag of {{name}}" width="300">
    </div>
</div>